<header id="header">      
    <div class="navbar navbar-inverse" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <% if signed_in? %>
                <div class="navbar-toggle navbar-user">
                    <div class="dropdown nav-link">
                      <%= render 'users/profile_dropdown' %>
                    </div>
                </div>
                <% end %>

                <a class="navbar-brand" href="<%= root_path %>">
                  <h1><%= image_tag "logo.png", alt: "logo" %></h1>
                </a>
                
            </div>
            
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-link"><%= link_to 'Home', root_path %></li>
                    <li class="nav-link"><%= link_to 'Flights Schedule', schedule_path %></li>
                    <li class="nav-link"><%= link_to 'Manage Bookings', manage_bookings_path %></li>
                    <% if signed_in? %>
                        <%= render 'users/signed_in_nav' %> 
                    <% end %>   
                </ul>
            </div>
        </div>
    </div>
</header>
<%= render partial: 'nav_script', formats: [:js] %>